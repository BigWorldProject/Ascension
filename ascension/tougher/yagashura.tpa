////// helper function for yagashura_plot

DEFINE_PATCH_FUNCTION ar5203_patch BEGIN
   REPLACE_TEXTUALLY "\(%WNL%\|%LNL%\|%MNL%\)" " "
   REPLACE_EVALUATE "THEN\(.*\)END"
   BEGIN
         SPRINT old_responses "%MATCH1%"
